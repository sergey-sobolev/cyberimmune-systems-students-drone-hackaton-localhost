FROM python:3.8-slim

ENV PYTHONDONTWRITEBYTECODE=1

ENV PYTHONUNBUFFERED=1

COPY requirements.txt .
RUN python -m pip install -r requirements.txt

COPY operator /operator
COPY config.ini /operator/

RUN adduser -u 5678 --disabled-password --gecos "" appuser && chown -R appuser /operator
USER appuser

WORKDIR /operator
CMD ["python", "operator.py", "config.ini"]